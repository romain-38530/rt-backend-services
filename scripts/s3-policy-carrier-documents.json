{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowCarrierDocumentsS3Access",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::rt-carrier-documents",
        "arn:aws:s3:::rt-carrier-documents/*"
      ]
    },
    {
      "Sid": "AllowTextractAccess",
      "Effect": "Allow",
      "Action": [
        "textract:DetectDocumentText",
        "textract:AnalyzeDocument"
      ],
      "Resource": "*"
    }
  ]
}
