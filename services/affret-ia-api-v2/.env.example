# ==================== SERVICE ====================
PORT=3017
NODE_ENV=production

# ==================== DATABASE ====================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/symphonia

# ==================== JWT ====================
JWT_SECRET=your-jwt-secret-here

# ==================== SERVICES INTERNES ====================
WEBSOCKET_URL=https://websocket.symphonia.com
ORDERS_API_URL=https://orders.symphonia.com
CARRIERS_API_URL=https://carriers.symphonia.com
SCORING_API_URL=https://scoring.symphonia.com
PRICING_API_URL=https://pricing.symphonia.com
NOTIFICATIONS_API_URL=https://notifications.symphonia.com

# TMS Sync API pour synchronisation Dashdoc
TMS_SYNC_API_URL=http://localhost:3008
TMS_SYNC_API_TOKEN=your-jwt-token-here
# Production: https://symphonia-tms-sync-prod.eba-siqpd4ua.eu-west-3.elasticbeanstalk.com

# ==================== EMAIL (SendGrid) ====================
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=affret@symphonia.com

# ==================== BOURSE PUBLIQUE ====================
BOURSE_BASE_URL=https://bourse.affretia.com

# ==================== CONFIGURATION AFFRET.IA ====================
AFFRET_MAX_PRICE_INCREASE=15
AFFRET_AUTO_ACCEPT_THRESHOLD=0
AFFRET_NEGOTIATION_MAX_ROUNDS=3
AFFRET_RESPONSE_TIMEOUT=24
AFFRET_SHORTLIST_SIZE=10

# ==================== DASHDOC INTEGRATION ====================
# API Dashdoc v4 pour import historique prix
DASHDOC_API_KEY=your_dashdoc_api_key_here
DASHDOC_API_URL=https://api.dashdoc.com/api/v4

# ==================== PRICING & MARKET INTELLIGENCE ====================
# Période par défaut historique prix
PRICING_DEFAULT_PERIOD=last_6_months

# Minimum de transports pour sous-traitant préféré
PRICING_MIN_TRANSPORTS_PREFERRED=3

# Fourchette acceptable négociation (% du prix moyen)
PRICING_ACCEPTABLE_RANGE_PERCENT=10

# Score de confiance minimum pour utiliser prix marché
PRICING_MIN_CONFIDENCE_SCORE=50

# ==================== FEATURES FLAGS ====================
# Activer/désactiver fonctionnalités pricing
FEATURE_DASHDOC_IMPORT=true
FEATURE_AUTO_NEGOTIATION=true
FEATURE_SUBCONTRACTOR_PRIORITY=true
FEATURE_MARKET_PRICING=true
