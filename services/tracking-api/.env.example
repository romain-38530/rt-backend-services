# Server Configuration
PORT=3012
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/symphonia?retryWrites=true&w=majority

# WebSocket Configuration
WEBSOCKET_URL=https://websocket.symphonia.com
WEBSOCKET_ENABLED=true

# TomTom API
TOMTOM_API_KEY=your-tomtom-api-key-here
TOMTOM_TRAFFIC_API_URL=https://api.tomtom.com/traffic/services/4/flowSegmentData
TOMTOM_ROUTING_API_URL=https://api.tomtom.com/routing/1/calculateRoute
TOMTOM_MAP_MATCHING_API_URL=https://api.tomtom.com/map-matching/1/match

# Geofencing
GEOFENCE_RADIUS_METERS=500
GEOFENCE_CHECK_INTERVAL=60000

# CORS
ALLOWED_ORIGINS=https://app.symphonia.com,http://localhost:3000

# Logging
LOG_LEVEL=info
