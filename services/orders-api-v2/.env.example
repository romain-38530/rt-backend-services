# Server Configuration
PORT=3011
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/symphonia?retryWrites=true&w=majority

# WebSocket Configuration
WEBSOCKET_URL=https://websocket.symphonia.com
WEBSOCKET_ENABLED=true

# API URLs (autres services)
AUTHZ_API_URL=https://authz.symphonia.com
CARRIERS_API_URL=https://carriers.symphonia.com
PRICING_API_URL=https://pricing.symphonia.com
LANE_MATCHING_API_URL=https://lane-matching.symphonia.com
DISPATCH_CHAIN_API_URL=https://dispatch-chain.symphonia.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CSV/XML Import
MAX_IMPORT_ROWS=1000
IMPORT_TIMEOUT=300000

# Export Configuration
EXPORT_TEMP_DIR=./temp
EXPORT_MAX_RECORDS=10000

# CORS
ALLOWED_ORIGINS=https://app.symphonia.com,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
