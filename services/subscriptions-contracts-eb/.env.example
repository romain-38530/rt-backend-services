# ============================================================================
# RT SYMPHONI.A - Environment Variables
# ============================================================================
# Version: 1.7.0
# Copy this file to .env and fill in your values
# ============================================================================

# ==================== SERVER ====================
NODE_ENV=production
PORT=8080

# ==================== MONGODB ====================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rt-symphonia?retryWrites=true&w=majority

# ==================== JWT AUTHENTICATION ====================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================== STRIPE PAYMENTS ====================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# ==================== MAILGUN (Email) ====================
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.your-domain.com
MAILGUN_HOST=https://api.eu.mailgun.net
MAILGUN_FROM=RT SYMPHONI.A <notifications@your-domain.com>

# ==================== TWILIO (SMS) ====================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+33xxxxxxxxx

# ==================== TOMTOM (GPS Tracking) ====================
TOMTOM_API_KEY=your-tomtom-api-key

# ==================== AWS (S3, Glacier, Textract) ====================
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=rt-symphonia-documents
AWS_S3_ARCHIVE_BUCKET=rt-symphonia-archive

# AWS Textract (OCR)
AWS_TEXTRACT_ACCESS_KEY=your-textract-access-key
AWS_TEXTRACT_SECRET_KEY=your-textract-secret-key
AWS_TEXTRACT_REGION=eu-west-1

# ==================== GOOGLE CLOUD (Vision OCR fallback) ====================
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# Or use inline credentials:
# GOOGLE_VISION_CREDENTIALS={"type":"service_account","project_id":"..."}

# ==================== OVHcloud (DNS & Email) ====================
OVH_APP_KEY=your-ovh-app-key
OVH_APP_SECRET=your-ovh-app-secret
OVH_CONSUMER_KEY=your-ovh-consumer-key
OVH_ENDPOINT=ovh-eu

# ==================== YOUSIGN (E-Signatures) ====================
YOUSIGN_API_KEY=your-yousign-api-key
YOUSIGN_WEBHOOK_SECRET=your-yousign-webhook-secret

# ==================== CORS ====================
CORS_ORIGIN=https://app.your-domain.com,https://admin.your-domain.com

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== ANTHROPIC CLAUDE (AI Chatbots) ====================
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096

# ==================== MICROSOFT TEAMS (Chatbot Notifications) ====================
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url
