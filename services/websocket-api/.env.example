# Server Configuration
PORT=3010
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/symphonia?retryWrites=true&w=majority

# Redis Configuration (optional, for scaling)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# CORS Configuration
CORS_ORIGIN=https://app.symphonia.com,http://localhost:3000
ALLOWED_ORIGINS=https://app.symphonia.com,http://localhost:3000

# Heartbeat Configuration
HEARTBEAT_INTERVAL=30000
CONNECTION_TIMEOUT=60000

# Logging
LOG_LEVEL=info
