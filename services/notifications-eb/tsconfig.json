{
    "include":  [
                    "src/**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ],
    "compilerOptions":  {
                            "forceConsistentCasingInFileNames":  true,
                            "skipLibCheck":  true,
                            "strict":  true,
                            "declaration":  true,
                            "module":  "ESNext",
                            "moduleResolution":  "node",
                            "rootDir":  "src",
                            "outDir":  "dist",
                            "target":  "ES2022",
                            "resolveJsonModule":  true,
                            "esModuleInterop":  true,
                            "declarationMap":  true,
                            "sourceMap":  true
                        }
}
