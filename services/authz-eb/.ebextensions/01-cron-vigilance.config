files:
  "/etc/cron.d/vigilance-cron":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Execution quotidienne du CRON de vigilance a 6h00 UTC (7h Paris hiver)
      # Verifie les documents expires, envoie les alertes, bloque les transporteurs
      0 6 * * * root /usr/bin/node /var/app/current/scripts/vigilance-cron.js >> /var/log/vigilance-cron.log 2>&1

commands:
  01_remove_old_cron:
    command: "rm -f /etc/cron.d/vigilance-cron.bak"
  02_create_log_file:
    command: "touch /var/log/vigilance-cron.log && chmod 666 /var/log/vigilance-cron.log"
